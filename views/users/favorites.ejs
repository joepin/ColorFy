<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Favorites</title>
  <link rel="stylesheet" href="css/style.css">
  <script src="scripts/scripts.js" type="text/javascript" charset="utf-8" async defer></script>
</head>
<body>

<h1>User Favorites</h1>

  <% favorites.forEach((obj) => { %>
    <p>timestamp: <%= obj.timestamp %></p>
    <p>id: <%= obj._id %></p>
    <div>
      <p>colors:</p>
      <p><%= obj.colors.red %></p>
      <p><%= obj.colors.green %></p>
      <p><%= obj.colors.blue %></p>
    </div>

    <form action='/users/favorites?_method=DELETE' method='POST'>
      <input type='hidden' name='id' value='<%= obj._id %>'>
      <button type='submit'>Remove from Favorites</button>
    </form>
  <% }) %>

</body>
</html>
